<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:background="@color/backgroundGray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:weightSum="10"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9.6"
            android:orientation="vertical"
            android:weightSum="10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>
            <com.beachbox.beachbox.widgets.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="@string/specialInstruction"
                android:textSize="14sp"
                android:textColor="@color/black_text_color" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>
            <com.beachbox.beachbox.widgets.EditTextRegular
                android:id="@+id/etCustomerComment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:textSize="14sp"
                android:hint="@string/addNote"
                android:gravity="start"
                android:backgroundTint="@color/white"
                android:background="@color/white"
                android:padding="5dp"
                android:textColorHint="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp" 
                android:layout_weight="0.2"/>
            <com.beachbox.beachbox.widgets.TextViewBold
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="@string/paymentInfo"
                android:textSize="14sp"
                android:textColor="@color/black_text_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:id="@+id/llCreditCard"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9.5"
                    android:orientation="horizontal"
                    android:weightSum="10"
                    android:background="@drawable/edt_white_cellborder">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:orientation="vertical"
                        android:weightSum="10">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"/>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="7"
                            android:src="@drawable/cccard"
                            android:scaleType="center"
                            android:id="@+id/imageView3" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"/>
                    <TextView
                        android:id="@+id/tvCardDetails"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.1"
                        android:textSize="16sp"
                        android:gravity="center|left"/>
                    <!--  <TextView
                          android:id="@+id/tvEditCard"
                          android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="1.5"
                          android:text="@string/Edit"
                          android:gravity="center"
                          android:textColor="@color/blue"
                          android:textSize="18sp"/>-->
                </LinearLayout>

                <View  android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.5"/>

                </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:id="@+id/llNoTip"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edt_white_cellborder"
                    android:orientation="vertical"
                    android:weightSum="10">

                    <com.beachbox.beachbox.widgets.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/noTip"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:id="@+id/textView7" />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <LinearLayout
                    android:id="@+id/llfiteenperdis"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edt_white_cellborder"
                    android:orientation="vertical">

                    <com.beachbox.beachbox.widgets.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:text="15%"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center|bottom"/>

                    <com.beachbox.beachbox.widgets.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"
                        android:id="@+id/tvFifteenPercentage" />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <LinearLayout
                    android:id="@+id/lltwentyper"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edt_white_cellborder"
                    android:orientation="vertical">

                    <com.beachbox.beachbox.widgets.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:text="20%"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center|bottom"
                        android:id="@+id/textView8" />

                    <com.beachbox.beachbox.widgets.TextViewRegular
                        android:id="@+id/tvTwentyPercentage"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:gravity="center_horizontal"/>
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"/>
                <LinearLayout
                    android:id="@+id/llCustome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/edt_white_cellborder"
                    android:orientation="vertical">
                    <com.beachbox.beachbox.widgets.TextViewRegular
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="5"
                        android:text="@string/Custom"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:paddingTop="8dp"
                        android:gravity="center|bottom"/>
                    <com.beachbox.beachbox.widgets.EditTextRegular
                        android:id="@+id/etCustomeVal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:hint="$0.0"
                        android:layout_weight="5"
                        android:inputType="number"
                        android:digits="1234567890."
                        android:textCursorDrawable="@null"
                        android:background="@null"
                        android:backgroundTint="@color/white"
                        android:textSize="12sp"
                        android:maxLength="5"
                        android:imeOptions="actionDone"
                        android:paddingBottom="3dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal"
                android:weightSum="10">
                <com.beachbox.beachbox.widgets.TextViewRegular
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="@string/orderSubtotal"
                    android:textColor="@color/black"
                    android:gravity="center|left"
                    android:textSize="14sp"/>
               <!-- <com.beachbox.beachbox.widgets.TextViewBold
                    android:id="@+id/tvOrderSubTotal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:textColor="@color/back_text_color"
                    android:gravity="center|right"
                    android:textSize="15sp"/>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5" />

                    <com.beachbox.beachbox.widgets.TextViewRegular
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:textColor="@color/grey_text_color"
                        android:gravity="center|right"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.beachbox.beachbox.widgets.TextViewBold
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:textColor="@color/black_text_color"
                            android:gravity="left|center"
                            android:textSize="15sp"/>

                        <com.beachbox.beachbox.widgets.TextViewRegular
                            android:id="@+id/tvOrderSubTotal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:textColor="@color/black_text_color"
                            android:gravity="right|center"
                            android:textSize="15sp"/>



                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal"
                android:weightSum="10">
                <com.beachbox.beachbox.widgets.TextViewRegular
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="@string/salesTax"
                    android:textColor="@color/black"
                    android:gravity="center|left"
                    android:textSize="14sp"/>
              <!--  <com.beachbox.beachbox.widgets.TextViewBold
                    android:id="@+id/tvSalesTax"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:textColor="@color/back_text_color"
                    android:gravity="center|right"
                    android:textSize="15sp"/>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <View android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5" />

                    <com.beachbox.beachbox.widgets.TextViewRegular
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2.5"
                        android:textColor="@color/grey_text_color"
                        android:gravity="center|right"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.beachbox.beachbox.widgets.TextViewBold
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:textColor="@color/black_text_color"
                            android:gravity="left|center"
                            android:textSize="15sp"/>

                        <com.beachbox.beachbox.widgets.TextViewRegular
                            android:id="@+id/tvSalesTax"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:textColor="@color/black_text_color"
                            android:gravity="right|center"
                            android:textSize="15sp"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="horizontal"
                android:weightSum="10">
                <com.beachbox.beachbox.widgets.TextViewRegular
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:text="@string/tip"
                    android:textColor="@color/black"
                    android:gravity="center|left"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <com.beachbox.beachbox.widgets.TextViewRegular
                        android:id="@+id/tvPercenategeType"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:textColor="@color/grey_text_color"
                        android:gravity="center|right"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <com.beachbox.beachbox.widgets.TextViewBold
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.5"
                            android:textColor="@color/black_text_color"
                            android:gravity="left|center"
                            android:textSize="15sp"/>

                        <com.beachbox.beachbox.widgets.TextViewRegular
                            android:id="@+id/tvTipAmount"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="8"
                            android:textColor="@color/black_text_color"
                            android:gravity="right|center"
                            android:textSize="15sp"/>



                    </LinearLayout>

                    </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"/>

            <com.beachbox.beachbox.widgets.TextViewBold
                android:id="@+id/tvFinalPlaceOrderAmt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"/>

        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>
    </LinearLayout>
</LinearLayout>